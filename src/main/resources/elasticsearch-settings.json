{
  "analysis": {
    "filter": {
      "italian_elision": {
        "type": "elision",
        "articles": [
          "c",
          "l",
          "all",
          "dall",
          "dell",
          "nell",
          "sull",
          "coll",
          "pell",
          "gl",
          "agl",
          "dagl",
          "degl",
          "negl",
          "sugl",
          "un",
          "m",
          "t",
          "s",
          "v",
          "d"
        ],
        "articles_case": false
      },
      "italian_stop": {
        "type": "stop",
        "stopwords": "_italian_"
      },
      "italian_stemmer": {
        "type": "stemmer",
        "language": "light_italian"
      },
      "italian_synonyms": {
        "type": "synonym",
        "synonyms": [
        ]
      },
      "ascii_folding": {
        "type": "asciifolding",
        "preserve_original": true
      },
      "ngram_filter": {
        "type": "ngram",
        "min_gram": 3,
        "max_gram": 10
      }
    },
    "analyzer": {
      "default": {
        "tokenizer": "standard",
        "filter": [
          "italian_elision",
          "lowercase",
          "ascii_folding",
          "italian_stop",
          "italian_synonyms",
          "italian_stemmer"
        ]
      },
      "it_ngram": {
        "tokenizer": "standard",
        "filter": [
          "italian_elision",
          "lowercase",
          "ascii_folding",
          "italian_stop",
          "italian_synonyms",
          "italian_stemmer",
          "ngram_filter"
        ]
      },
      "it_search": {
        "tokenizer": "standard",
        "filter": [
          "italian_elision",
          "lowercase",
          "ascii_folding",
          "italian_stop",
          "italian_synonyms",
          "italian_stemmer"
        ]
      }
    },
    "normalizer": {
      "lowercase_normalizer": {
        "type": "custom",
        "char_filter": [],
        "filter": [
          "lowercase"
        ]
      }
    }
  }
}
